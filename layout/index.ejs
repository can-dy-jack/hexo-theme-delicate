<section class="index-title">
    <h2><%- config.title %></h2>
    <div class="description"><%- config.description %></h3>
</section>
<header>
    <%# TODO %>
    <nav>
        <a href="/"><%- __('home') %></a>
        <% for(link in theme.index.links) { %>
             | <a href="<%- url_for(theme.index.links[link]) %>"><%- __(link) %></a>
        <% } %>
    </nav>
</header>
<div class="head-img">
    <%- image_tag('imgs/beach.jpg') %>
</div>
<article class="index-article">
    <ul>
        <% for (post of page.posts.data) { %>
            <li>
                <div class="flex-between">
                    <span>
                        <a href="<%- url_for(post.path) %>">
                            <%= post.title %>
                        </a>
                    </span>
                    <span class="gray"><%= post.date.format("YYYY/MM/DD") %></span>
                </div>
            </li>
        <% } %>
    </ul>

    <%- partial('component/paginator', { total: site.posts.length }) %>
</article>
