<%
    page.layout = "category"
    page.title = [__('category.title'), page.category].join(" - ")

    var cat = site.categories.find({name: page.category}).filter(cat => cat.length).data[0];
    var postTotal = cat ? cat.posts.length : 0
%>

<section class="category">
    <h2 class="category-head"><%= page.category %> - <%= __('category.h1', postTotal) %></h2>
    
    <%- partial('components/list.ejs') %>

    <span id="root-url" style="display: none;"><%- config.root %>tags/<%= page.category %></span>
    <%- partial('components/pagination', {item: page}) %>
</section>

