<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%- config.description %>">
    <meta name="author" content="<%- config.author %>">
    <link rel="icon" href="<%- config.root %><%- theme.titleLogo %>">
    <title><%- config.title %> <%- page.title %></title>
    <%- css('css/blog.css') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- fancybox -->
    <% if(theme.fancybox.enable){ %>
        <link href="https://cdn.bootcdn.net/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" rel="stylesheet">
    <% } %>
    <%- css('css/markdown.css') %>
    <%- css('css/plugins.css') %>
    <!-- 默认背景 -->
    <% 
        var headerColor = theme.style.color.header || '#fff',
        headerBorderRadius = theme.style.color.headerBorderRadius || 0,
        headerBoxShadow = theme.style.color.headerBoxShadow || 'none',
        bodyColor = theme.style.color.body || '#fafafa',
        postColor = theme.style.color.post || '#fff',
        postBoxShadow = theme.style.color.postBoxShadow || 'none',
        menuColor = theme.style.color.menu || '#fff',
        menuBoxShadow = theme.style.color.menuBoxShadow || 'none',
        scolor = theme.style.siderbar.color || '#aaa',
        hscolor = theme.style.siderbar.hoverColor || 'teal';
    %>
    <style>
        body {
            background-color: <%= bodyColor %>;
            font-family: <%= theme.font %>;
        }
        /* blog menu */
        nav.navbar {
            -webkit-box-shadow: <%= menuBoxShadow %>;
            box-shadow: <%= menuBoxShadow %>;
            background-color: <%= menuColor %>;
        }
        .blog-header {
            background-color: <%= headerColor %>;
            border-radius: <%= headerBorderRadius %>;
            box-shadow: <%= headerBoxShadow %>;
        }
        .blog-post {
            background-color: <%= postColor %>;
            box-shadow: <%= postBoxShadow %>;
        }
        .sidebar-about .my-social-account .icon-box a svg{
            fill: <%= scolor %>;
        }
        .sidebar-about .my-social-account .icon-box a:hover svg{
            fill: <%= hscolor %>;
        }
    </style>
    <!-- 背景 -->
    <% if(theme.background.meditation.enable) { %>
        <%- css('css/meditation.css') %>
    <% } else if(theme.background.point.enable){ %>
    <% var pointColor = theme.background.point.color,
        pointSize = theme.background.point.size + 8;
     %>
        <style>
            body {
                background: radial-gradient(<%= pointColor %> 20%, #fff 40%) repeat;
                background-size: <%= pointSize %>px <%= pointSize %>px;
            }
        </style>
    <% } else if(theme.background.line.enable){ %>
    <% var lineSize = theme.background.line.size + 30;%>
        <style>
            body {
                background-image: url('<%- config.root %>/img/line.png');
                background-size: <%= lineSize %>px <%= lineSize %>px;
            }
        </style>
    <% } else if(theme.background.line2.enable){ %>
    <% var line2Size = theme.background.line2.size + 20;%>
        <style>
            body {
                background-image: url('<%- config.root %>/img/line2.png');
                background-size: <%= line2Size %>px <%= line2Size %>px;
            }
        </style>
    <% } %>
    <style type="text/css">
        .icon {
            width: 1.6em; height: 1.6em;
            vertical-align: -0.15em;
            fill: currentColor;
            overflow: hidden;
        }
        @font-face{
            font-family: 'PTSans';
            src: url('<%- config.root %>font/PT_Sans-Web-Regular.ttf'); 
        }
    </style>
<% if (theme.gittalk && theme.gittalk.enable){ %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css">
    <script src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js"></script>
<% } %>

<% if (theme.baidu_analytic.enable){ %>
    <%- partial('baidu-analytics') %>
<% } %>

</head>
