<nav class="navbar navbar-expand-lg navbar-light">
  <a class="navbar-brand" href="<%- config.root %>">
    <img src="<%- config.root %>favicon/logo2-128.ico" width="30" height="30" alt="logo">
    <%= theme.title %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% for(item in theme.menu){ %>
      <li class="nav-item">
        <a class="nav-link" href="<%- config.root %><%= theme.menu[item] %>"><%= item %></a>
      </li>
      <% } %>
      <% if(theme.friend.enable){ %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
          Friend
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% for(item in theme.friend){ %>
            <% if(item != 'enable' && item != 'divider'){ %>
            <a class="dropdown-item" href="<%= theme.friend[item] %>"><%= item %></a>
            <% } else if(item == 'divider'){ %>
            <div class="dropdown-divider"></div>
            <% } %>
          <% } %>
        </div>
      </li>
      <% } %>
    </ul>
    <% if(theme.search.enable){ %>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    <% } %>
  </div>
</nav>
