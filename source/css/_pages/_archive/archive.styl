section.archive {
    background-color: #fff;
    width: 80%;
    margin: 100px auto 50px auto;
    box-shadow: 0 5px 20px rgba(0,0,0,.04);
    border-radius: 10px;
    box-sizing: border-box;
    padding: 40px 100px;
}
.archive .post-list-group {
    display: flex;
    flex-direction: column;
}
.archive .post-list-group .post-list-year {
    font: 1.2rem bold;
}
.archive .post-list-group .list-group-item {
    background-color: #fff;
    box-sizing: border-box;
    padding: .75rem 1.25rem;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.archive .post-list-group .list-group-item:hover {
    background-color: rgb(242, 248, 244);
    color: rgb(54, 194, 100);
}
.archive .post-list-group .list-group-item time {
    margin-right: 20px;
}