
/* 
 ~ 适配大小不同屏幕
 */
@media screen and (min-width: 1200px) {
    /* .post-toc {
        width: 20%;
    } */

    .post {
        padding: 100px 50px 40px 50px;
    }

    main .article-container article {
        padding: 20px 8%;
    }
    section.archive {
        width: 80%;
        padding: 40px 100px;
    }
}

@media screen and (min-width: 1000px) and (max-width: 1200px) {
    /* .post-toc {
        width: 400px;
    } */

    .post {
        padding: 100px 40px 40px 40px;
    }

    main .article-container article {
        padding: 20px 60px;
    }
    section.archive {
        width: 800px;
        padding: 40px 80px;
    }
}

@media screen and (min-width: 800px) and (max-width: 1000px) {
    /* .post-toc {
        width: 400px;
    } */

    .post {
        padding: 100px 30px 30px 30px;
    }

    main .article-container article {
        padding: 20px 40px;
    }
    section.archive {
        width: 600px;
        padding: 30px 50px;
    }
    
}

@media screen and (max-width: 800px) {
    .post-toc {
        width: 100%;
        height: 70vh;
        position: fixed;
        bottom: 0;
        left: 0;
        padding: 10px 0 30px 0;
        box-shadow: 0 -5px 20px 3px rgba(0, 0, 0, .1);
        z-index: 100;
        transform: scaleY(0);
        overflow: auto;
        transform-origin: bottom;
    }

    .post-toc .toc {
        position: relative;
        top: 0;
        width: 100%;
        max-height: max-content;
    }

    .open-toc {
        display: inline-block;
    }

    .post {
        padding: 100px 10px 40px 10px;
    }

    nav .navbar .nav-right .friends-more {
        display: inline;
    }

    nav .navbar .nav-right a {
        display: none;
    }

    main .article-container article {
        padding: 20px;
    }
    section.archive {
        width: 90%;
        padding: 20px 30px;
    }
}

@media screen and (max-width: 600px) {
    nav .navbar .nav-left .nav-brand-text {
        display: none;
    }
    section.archive {
        width: 100%;
        border-radius: 0;
    }
}