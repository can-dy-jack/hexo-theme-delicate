@media screen and (max-width: 600px)
    section.archive, .category-list, section.tag
        width: 100%;
        border-radius: 0;
    section.tags
        width: 100%;
        margin: 120px auto 120px auto;
        border-radius: 0;
        padding: 20px 40px 100px 20px;
        h1
            margin: 30px 0;

    .page-404
        padding: 100px 10%
    .search .search-wrap
        width: 95%
