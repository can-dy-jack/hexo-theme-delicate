/*
~ 适配大小不同屏幕
*/
@media screen and (min-width: 1200px)
    .post
        padding: 100px 50px 20px 50px
    main .article-container article
        padding: 20px 8%;
    section.archive, .category-list, section.tag
        width: 80%;
        padding: 40px 100px;
    section.tags
        width: 70%
        margin: 160px auto 120px auto;
        h1
            margin: 40px 0;
    .article-container
        width: 80%;
    .friends-more
        display: none


@media screen and (min-width: 1000px) and (max-width: 1200px)
    .post
        padding: 100px 40px 20px 40px
    main .article-container article
        padding: 20px 60px;
    section.archive, .category-list, section.tag
        width: 800px;
        padding: 40px 80px;
    .article-container
        width: 80%;
    .friends-more
        display: none

@media screen and (min-width: 800px) and (max-width: 1000px)
    .post
        padding: 100px 30px 20px 30px
    main .article-container article
        padding: 20px 40px;
    section.archive, .category-list, section.tag
        width: 600px;
        padding: 30px 50px;
    section.tags
        padding: 30px 50px 70px 50px;
        h1
            margin: 30px 0;
    .article-container
        width: 90%;
    .nav-box .nav-container
        background: #fff
        border: 1px solid #eee
        position: fixed
        top: 40px
        left: 0
        width: 300px
        box-sizing: border-box
        height: calc(100vh - 40px)
        flex-direction: column
        overflow: auto
        .nav-pages
            flex: 0
            width: 100%
            display: flex
            margin 20px
            flex-direction: column
            justify-content: space-around
            a
                text-align: center
                padding: 5px
                margin 1px
                border-radius: 40px
                &:hover 
                    background: rgba(0, 240, 40, .2)
        .nav-link
            display: flex
            flex-direction: column
            justify-content: space-around
            width: 100%
            a
                text-align: center
                padding: 5px
                margin 1px
                border-radius: 40px
                &:hover 
                    background: rgba(0, 240, 40, .2)


@media screen and (max-width: 800px)
    .post-toc
        width: 100%;
        height: 70vh;
        fix-it(fixed)
        bottom: 0;
        left: 0;
        padding: 10px 0 30px 0;
        box-shadow: 0 -5px 20px 3px rgba(0, 0, 0, 0.1);
        transform: scaleY(0);
        overflow: auto;
        transform-origin: bottom;
    .post-toc .toc
        position: relative;
        top: 0;
        width: 100%;
        max-height: max-content;
    .open-toc
        display: inline-block;
    .post
        padding: 100px 20px 20px 20px
        width: 100%
    main .article-container article
        padding: 20px;
    section.archive, .category-list, section.tag
        width: 90%;
        padding: 20px 30px;
    section.tags
