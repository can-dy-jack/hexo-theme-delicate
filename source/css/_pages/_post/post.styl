.post-body {
    background-color: #fafafa;
    display: flex
}
.post {
    box-sizing: border-box
    background-color: #fff;
    width: 75%;
    padding: 100px 50px 20px 50px
}

.post-toc {
    width: 25%;
    padding-top: 100px;
    background-color: #fafafa;
    border-left: 1px solid #eee;

    .toc {
        position: sticky;
        width: 100%;
        max-height: 90vh;
        overflow: auto;
        top: 80px;
        list-style-type: none;
        padding-left: 0;
        background-color: #fafafa;
        transition: all 0.25s ease;

        &::-webkit-scrollbar {
            width: 10px;
            height: 10px;
        }

        &::-webkit-scrollbar-thumb {
            width: 6px;
            height: 6px;
            background-color: #f1f1f1;
            background-clip: padding-box;
            border: 2px solid transparent;
            transform: background 0.25 ease;
        }

        &:hover::-webkit-scrollbar-thumb {
            background-color: #ddd;
        }

        ol, ul {
            padding-left: 20px;
            list-style-type: none;
            margin: 0;

            li {
                padding: 0;
            }
        }

        a {
            text-decoration: none;
            box-sizing: border-box;
            color: #232323;
            padding: 6px 10px;
            width: 100%;
            display: block;
            overflow: hidden;

            &:hover {
                text-decoration: none;
                color: gray;
            }

            &.active {
                color: blue;
                border-left: 2px solid blue;
                background-color: rgb(221, 235, 248);
                &+ol {
                    background-color: rgb(238, 243, 248);
                }
            }
        }
    }
}

.open-toc {
    position: fixed;
    left: 20px;
    bottom: 20px;
    background-color: blue;
    display: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    text-align: center;
    cursor: pointer;
    box-shadow: 0 0 6px 2px rgba(0, 0, 0, 0.05);
    user-select: none;
    z-index: 101;

    svg {
        fill: white;
        transform: translateY(13px);
        transition: all 0.25s ease;
    }

    &:hover {
        background-color: white;

        svg {
            fill: blue;
        }
    }

    &:active {
        transform: scale(0.9);
    }
}

.post-share {
    margin: 20px 0;
    padding: 10px 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;

    span a {
        border: none;
        background: none !important;
        margin-left: 6px;
    }

    .post-share-qq svg {
        fill: #01beff;
        font-size: 24px;
    }

    .post-share-weibo svg {
        fill: #e6162d;
        font-size: 24px;
    }
}
/* post tag and categories */
.blog-tag-and-cate {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}

.post-tags-container {
    margin: 5px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.post-tags-container .post-tags-text {
    background-color: #eee;
    padding: 2px 5px 3px 8px;
    margin-left: 22px;
    margin-bottom: 5px;
    position: relative;
}

.post-tags-container .post-tags-text::before {
    content: '';
    position: absolute;
    left: -13px;
    top: 0;
    bottom: 0;
    width: 0;
    height: 0;
    border-right: 13px solid #eee;
    border-top: 13px solid transparent;
    border-bottom: 13px solid transparent;
    transition: border 0.25s ease;
}

.post-tags-container .post-tags-text::after {
    content: '';
    position: absolute;
    top: 10px;
    left: -3px;
    background-color: rgb(12, 197, 12);
    width: 6px;
    height: 6px;
    border-radius: 50%;
}

.post-tags-text:hover::before {
    border-right-color: #ddd;
}

.post-tags-text:hover {
    background-color: #ddd;
}

.glyphicon-tags {
    fill: rgb(12, 197, 12);
}

.post-categories-container {
    margin: 5px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.post-categories-container .post-categories-text {
    background-color: #eee;
    padding: 2px 5px 3px 8px;
    margin-left: 22px;
    margin-bottom: 5px;
    position: relative;
}

.post-categories-container .post-categories-text::before {
    content: '';
    position: absolute;
    left: -13px;
    top: 0;
    bottom: 0;
    width: 0;
    height: 0;
    border-right: 13px solid #eee;
    border-top: 13px solid transparent;
    border-bottom: 13px solid transparent;
    transition: border 0.25s ease;
}

.post-categories-container .post-categories-text::after {
    content: '';
    position: absolute;
    top: 10px;
    left: -3px;
    background-color: blue;
    width: 6px;
    height: 6px;
    border-radius: 50%;
}

.post-categories-text:hover::before {
    border-right-color: #ddd;
}

.post-categories-text:hover {
    background-color: #ddd;
}

.glyphicon-folder-open {
    fill: blue;
}

.post-tags-text a,
.post-categories-text a {
    background: none;
    border: none;
}

.post-tags-text a:hover,
.post-categories-text a:hover {
    background: none;
    border-bottom: none;
}
/* post-alert */
.post-alert {
    background-color: rgba(255, 2, 1, .1);
    color: red;
    padding: 10px 20px;
    margin: 10px 0;
    text-align: center;
}

/* post-change */
.post-change {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.post-change .post-pre a,
.post-change .post-next a {
    display: flex;
    align-items: center;
    height: 25px;
    padding: 2px 5px;
}
