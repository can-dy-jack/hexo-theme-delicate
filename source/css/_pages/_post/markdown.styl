/* post markdown */
.post .post-title {
    font-size: 26px;
    text-align: center;
}

.post .blog-post-info {
    text-align: center;
    color: gray;
    margin-bottom: 20px;
}

.post h2 {
    font-size: 24px;
}

.post h3 {
    font-size: 20px;
}

.post h4, .post h5, .post h6 {
    font-size: 18px;
}

.post p {
    font-size: 16px;
    line-height: 24px;
}

.post a {
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    background-color: rgba(248, 229, 175, 0.3);
    color: #1a1a1a;
    transition: all 0.25s ease;
    text-decoration: none;
}

.post a:hover {
    background-color: #f8e5af;
    border-bottom-color: #1a1a1a;
}

.post a[rel='noopener']::after {
    content: '\1F517';
}

.post ul, .post ol {
    padding-left: 25px;
}

.post ul li, .post ol li {
    margin-bottom: 3px;
}

.post img {
    box-shadow: 0 0 14px 4px rgba(0, 0, 0, 0.03);
    border-radius: 10px;
    margin: 10px 0;
}

.post blockquote {
    border-left: 4px solid #ccc;
    margin: 10px 0;
    padding: 8px 15px;
}

.post blockquote p {
    margin: 0;
    padding: 0;
    color: gray;
}

.post>table {
    border-collapse: collapse;
    max-width: 100%;
}

.post>table thead {
    background-color: #bbb;
}

.post p {
    margin: 10px 0;
}

.post>table tr td, .post>table tr th {
    border: 1px solid #bbb;
    padding: 5px;
}

.post>table tbody tr:nth-child(2n) {
    background-color: #fafafa;
}

.post li>code, .post p code {
    color: rgb(241, 42, 42);
    background-color: rgba(0, 0, 0, 0.05);
    padding: 1px 3px;
    border-radius: 3px;
    font-family: consolas, sans-serif;
    margin: 0 2px;
}