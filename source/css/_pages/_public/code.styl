/* 代码块共有样式 */
figure
    overflow: auto
    margin: 20px 0
    width: 100%
    position: relative
    table
        tr td
            pre
                margin: 0
                padding: 0
            &.gutter
                pre
                    padding: 0 10px
                    color: #aaa
                    text-align: center
                    user-select: none
        pre, pre code
            font-family: Roboto Mono, JetBrains Mono, consolas, microsoft yahei, sans-serif
        tr
            border: 0
            margin: 0
    &::-webkit-scrollbar
        height: 10px
        width: 10px
    &::-webkit-scrollbar-thumb
        background-clip: padding-box
        height: 6px
        width: 6px
        border: 2px solid transparent
    figcaption
        font-size: 14px
        padding: 5px 12px
        display: flex
        justify-content: space-between
        border-bottom: 1px solid #eee
    .code-info
        background: #f3f3f3
        position: sticky
        left: 0
        padding: 6px 12px
        display: flex
        justify-content: space-between
        align-items: center
        font-size: 14px
        .left
            display: flex
            align-items: center
            span
                margin-right: 3px
            .mac-circle1
                display: inline-block
                height: 1em
                width: 1em
                border-radius: 50%
                background-color: #ff5f56
            .mac-circle2
                display: inline-block
                height: 1em
                width: 1em
                border-radius: 50%
                background-color: #ffbd2e
            .mac-circle3
                display: inline-block
                height: 1em
                width: 1em
                border-radius: 50%
                background-color: #27c93f
            .code-type
                margin: 0 10px
        .copy-btn
            cursor: pointer
            display: flex
            align-items: flex-start
            color: gray
            svg
                margin-right: 3px
                fill: gray
    pre code.hljs
        display: block
        overflow-x: auto
        padding: 0.5em
    code.hljs
        padding: 3px 5px

