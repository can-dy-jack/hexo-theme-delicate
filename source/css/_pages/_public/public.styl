div,nav,span,main,body
  margin: 0
  padding: 0

html
  scroll-behavior: smooth

.transition
  transition: all 0.25s ease;

::selection
  background-color: antiquewhite;
  color: #232323;

body
  font-family: microsoft yahei, Roboto Mono, JetBrains Mono, consolas, sans-serif;
  background-color: #fcfcfc;
  background-image: radial-gradient(#ddddeeaa 12%, #fcfcfcaa 12%);
  background-size: 15px 15px;
  font-size: 16px;

a
  color: inherit;
  text-decoration: none;
  transition: all 0.25s ease;
  &:hover 
    color: #f8e5af;

img
  max-width: 100%;

hr
  border: none;
  border-top: 3px double #aaa;
  color: #aaa;
  overflow: visible;
  text-align: center;
  height: 5px;
  margin: 5px 0;
  &:after
    background: #fff;
    content: 'ยง';
    padding: 0 4px;
    position: relative;
    top: -13px;

.page-404
  height: 90vh
  width: 100%
  box-sizing: border-box
  padding: 100px 20%
  background: #fff
  h1
    color: red
  #page404-time
    font-size: 1.4rem
    color: red

