// $markdown
.post, .excerpt, .page
    h2
        font-size: 24px
    h3
        font-size: 20px
    h4, h5, h6
        font-size: 18px
    p
        font-size: 16px
        line-height: 24px
    a
        border-bottom: 1px solid var(--blur-color)
        background-color: $markdown-a-background
        transition: all 0.25s ease
        text-decoration: none
        &:hover
            background-color: $markdown-a-hoverBackground
            border-bottom-color: var(--full-color)
    ul, ol
        padding-left: 25px
    li
        line-height: 1.6em
    img
        box-shadow: 0 0 14px 4px rgba(0, 0, 0, 0.03)
        border-radius: 10px
        margin: 10px 0
    blockquote:not(.pullquote)
        border-left: $markdown-blockquote-borderLeftWidth solid $markdown-blockquote-borderLeftColor
        margin: 10px 0
        padding: $markdown-blockquote-padding
        p
            margin: 0
            padding: 0
            color: $markdown-blockquote-color
        footer
            margin: 10px 0
            text-align: right
            &::before
                content: '--'
    .pullquote
        background: #f2f2f2
        margin: 20px 0
        padding: 5px 20px
        border-radius: 3px
        position: relative
        p
            color: #555
        .pullquote-icon
            position: absolute
            right: 10px
            bottom: -14px
            svg
                fill: #aaa
        &.information
            background: #d7f2ff
            svg
                fill: #7ed1f8
        &.red
            background: #ffe1e7
            svg
                fill: #f56179
        &.danger
            background: #fffde1
            svg
                fill: #f4f753
        &.blue
            background: #d8ddfa
            svg
                fill: #4188f3
    .mindmap
        width: 100%
        box-sizing: border-box
        svg
            font-family: Roboto Mono, JetBrains Mono, microsoft yahei, consolas, sans-serif
    > table
        border-collapse: collapse
        max-width: 100%
        margin: 10px auto
        thead
            background-color: $markdown-table-color
        tr
            td, th
                border: 1px solid $markdown-table-border-color
                padding: 5px
            &:nth-child(2n)
                background-color: $markdown-table-tr-color
    li>code, p code, &>table code, h1>code, h2>code, h3>code, h4>code,h5>code
        color: $inline-code-color
        background-color: $inline-code-bg-color
        padding: 1px 3px
        border-radius: 3px
        font-family: consolas, sans-serif
        margin: 0 2px
    .center
        text-align: center
    .mermaid
        text-align: center
