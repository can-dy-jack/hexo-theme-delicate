// $markdown
$markdown 
    h2
        font-size: 24px;
    h3
        font-size: 20px;
    h4, h5, h6
        font-size: 18px;
    p
        font-size: 16px;
        line-height: 24px;
    a
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
        background-color: rgba(248, 229, 175, 0.3);
        color: #1a1a1a;
        transition: all 0.25s ease;
        text-decoration: none;
        &:hover
            background-color: #f8e5af;
            border-bottom-color: #1a1a1a;
        &[rel='noopener']::after
            content: '\1F517';
    ul, ol
        padding-left: 25px;
        li
            margin-bottom: 3px;
    img
        box-shadow: 0 0 14px 4px rgba(0, 0, 0, 0.03);
        border-radius: 10px;
        margin: 10px 0;
    blockquote
        border-left: 4px solid #ccc;
        margin: 10px 0;
        padding: 8px 15px;
        p
            margin: 0;
            padding: 0;
            color: gray;
    > table
        border-collapse: collapse;
        max-width: 100%;
        thead
            background-color: #bbb;
        tr 
            td, th
                border: 1px solid #bbb;
                padding: 5px;
            &:nth-child(2n)
                background-color: #fafafa;
    li>code, p code
        color: rgb(241, 42, 42);
        background-color: rgba(0, 0, 0, 0.05);
        padding: 1px 3px;
        border-radius: 3px;
        font-family: consolas, sans-serif;
        margin: 0 2px;
