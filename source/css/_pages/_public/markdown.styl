// $markdown
.post, .excerpt, .page
    font-size: 16px
    line-height: 24px
    h2
        font-size: 24px
    h3
        font-size: 20px
    h4, h5, h6
        font-size: 18px
    a
        border-bottom: 1px solid rgba(0,0,0,.2)
        background-color: $markdown-a-background
        transition: all 0.25s ease
        text-decoration: none
        color: #4a4a4a
        &:hover
            background-color: $markdown-a-hoverBackground
            border-bottom-color: #333
            color: #333
    .clear-markdwon-a
        a
            border: none
            background: none
            &:hover
                background: none
                border: none
    .vssue
        a
            border: none
            background: none
            &:hover
                background: none
                border: none
    ul, ol
        padding-left: 25px
    li
        line-height: 1.6em
    img
        // box-shadow: 0 0 14px 4px rgba(0, 0, 0, 0.03)
        border-radius: 10px
        margin: 10px 0
        cursor: zoom-in
    blockquote:not(.pullquote)
        border-left: $markdown-blockquote-borderLeftWidth solid $markdown-blockquote-borderLeftColor
        margin: 10px 0
        padding: $markdown-blockquote-padding
        p
            margin: 0
            padding: 0
            color: $markdown-blockquote-color
        footer
            margin: 10px 0
            text-align: right
            &::before
                content: '--'
    .pullquote
        background: #f2f2f2
        margin: 20px 0
        padding: 5px 20px
        border-radius: 3px
        position: relative
        color: var(--text-color)
        p
            color: #555
        .pullquote-icon
            position: absolute
            right: 10px
            bottom: -14px
            svg
                fill: #aaa
        &.information
            background: #d7f2ff
            svg
                fill: #7ed1f8
        &.red
            background: #ffe1e7
            svg
                fill: #f56179
        &.danger
            background: #fffde1
            svg
                fill: #f4f753
        &.blue
            background: #d8ddfa
            svg
                fill: #4188f3
    .mindmap
        width: 100%
        box-sizing: border-box
        svg
            font-family: Roboto Mono, JetBrains Mono, microsoft yahei, consolas, sans-serif
    >table, .collapse-text>table, .toasts-content>table
        // border-collapse: collapse
        width: 100%
        margin: 10px auto
        color: var(--text-color)
        border: 1px solid var(--table-border-color)
        border-radius: 5px
        background-color: var(--main-bg)
        thead
            background-color: var(--table-thead-bg)
        tr
            th
                text-align: center
            td, th
                padding: 5px
        tbody
            tr:nth-child(2n)
                background-color: var(--table-tr-bg)
            tr:nth-child(2n+1)
                background-color: var(--main-bg)
    li>code, p code, &>table code, h1>code, h2>code, h3>code, h4>code,h5>code
        color: $inline-code-color
        background-color: $inline-code-bg-color
        padding: 1px 3px
        border-radius: 3px
        font-family: consolas, sans-serif
        margin: 0 2px
    .center
        text-align: center
    .mermaid
        text-align: center

.img-container
    position: fixed;
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 1000
    display: none
    transform-origin: center
    .img-bg
        position: fixed;
        top: 0
        left: 0
        right: 0
        bottom: 0
        z-index: 1001
        cursor: zoom-out
        background-color: rgba(0,0,0,.5)
    .img-inner-box
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        display: flex
        align-items: center
        justify-content: center
        padding 20px
        box-sizing: border-box
        cursor: zoom-out
        img
            cursor: move
            transition: all 0.5s cubic-bezier(1,0,0,1)
            transform: scale(0)
            z-index: 1002
            max-height: calc(100% - 40px)
            max-width: 95%
