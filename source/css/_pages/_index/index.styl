main
    .index-header
        width: 100%
        height: 160px
        text-align: center
        padding: 80px 0
    .index-title
        font-size: 40px
        text-align: center
        div
            position: relative
            white-space: nowrap
            &::after
                content: 'I'
                animation: index_title_after 1s infinite normal
    .index-description
        font-size: 34px
    .article-container
        background-color: #fff
        margin: 0 auto
        box-sizing: border-box
        box-shadow: 0 -5px 10px rgba(0, 0, 0, 0.12)
        border-radius: 10px
        article
            box-sizing: border-box
            padding: 20px 50px
    .pagination
        background-color: #fff

/* 模拟指针闪烁 */
@keyframes index_title_after
    from
        opacity: 1
    to
        opacity: 0

// index markdown
.excerpt-title
    font-size: 30px
    text-align: center

.excerpt-meta
    text-align: center
    color: gray
    margin-bottom: 20px

.excerpt p
    margin: 10px 0

.excerpt-more
    text-align: right
    a
        display: inline-block
        padding: 4px
        border-bottom: 1px solid #aaa
        border-radius: 2px
        margin: 10px 0
        position: relative
        &::after
            content: ''
            position: absolute
            top: 0
            bottom: 0
            right: 0
            left: 0
            background-color: rgba(0, 0, 0, 0.1)
            transition: transform 0.6s ease
            transform: scaleY(0)
            transform-origin: top
        &:hover::after
            transform: scaleY(1)
            transform-origin: bottom
