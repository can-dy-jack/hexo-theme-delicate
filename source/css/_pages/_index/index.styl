main {
    .index-header {
        width: 100%;
        height: 160px;
        text-align: center;
        padding: 80px 0;
    }

    .index-title {
        font-size: 40px;
        text-align: center;

        div {
            position: relative;
            white-space: nowrap;

            &::after {
                content: 'I';
                animation: index_title_after 1s infinite normal;
            }
        }
    }

    .index-description {
        font-size: 34px;
    }

    .article-container {
        width: 100%;
        box-sizing: border-box;

        article {
            box-sizing: border-box;
            padding: 20px 50px;

            &:nth-child(2n+1) {
                background-color: #fff;
            }

            &:nth-child(2n) {
                background-color: #ddd;
            }
        }
    }
}

/* 模拟指针闪烁 */
@keyframes index_title_after {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}